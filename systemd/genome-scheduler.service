[Unit]
Description=ГЕНОМ Scheduler — Планировщик автозадач
After=docker.service
PartOf=genome-orchestrator.service

[Service]
Type=simple
User=fedr
WorkingDirectory=/home/fedr/openclaw/genome
ExecStart=/usr/bin/python3 /home/fedr/openclaw/genome/run.py --scheduler
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=genome-scheduler
Environment="PYTHONPATH=/home/fedr/openclaw/genome"

[Install]
WantedBy=multi-user.target
